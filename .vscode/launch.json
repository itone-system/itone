{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        // "protocol": "legacy",
        "name": "DEV",
        "runtimeExecutable": "node",
        "program": "${workspaceRoot}/server.js"
        // "restart": true
      },
      {
        "type": "node",
        "request": "attach",
        "restart": true,
        "protocol": "inspector",
        "name": "Debug",
        "skipFiles": [
            "<node_internals>/**"
        ],
        "outFiles": [
          "${workspaceFolder}/**/*.js"
        ]
      }
    ]
}
