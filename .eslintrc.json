{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": ["standard"],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "semi": ["error", "always"],
    "camelcase": "off",
    "no-useless-constructor": "off",
    "no-useless-escape": "off",
    "prefer-regex-literals": "off",
    "no-throw-literal": "off",
    "jest/expect-expect": "off",
    "valid-typeof": "off",
    "promise/param-names": "off",
    "array-callback-return": "off",
    "no-undef": "off"
  }
}
